{
  "name": "shops",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && yarn lerna clean -y && yarn lerna bootstrap && yarn lerna run build",
    "prettier:check": "prettier --check --single-quote \"./**/*.{ts,tsx,js,vue}\"",
    "prettier:write": "prettier --write --single-quote \"./**/*.{ts,tsx,js,vue}\"",
    "upgrade-packages": "yarn upgrade-interactive --latest",
    "generate-types": "cd packages/common && yarn generate"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "2.2.1"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "vendure/"
    ],
    "nohoist": [
      "**/@vendure/ui-devkit"
    ]
  }
}
