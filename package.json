{
  "name": "shops",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "yarn husky install",
    "build": "yarn && yarn lerna exec yarn && yarn lerna run build",
    "bootstrap": "yarn build && yarn lerna bootstrap",
    "lerna:publish": "yarn lerna run test && yarn lerna run build && yarn lerna publish",
    "prettier:check": "prettier --check --single-quote \"./**/*.{ts,tsx,js,vue}\"",
    "prettier:write": "prettier --write --single-quote \"./**/*.{ts,tsx,js,vue}\"",
    "e2e": "cd packages/e2e && yarn e2e"
  },
  "license": "MIT",
  "devDependencies": {
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "2.5.1"
  }
}
