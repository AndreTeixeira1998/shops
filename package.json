{
  "name": "shops",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "bootstrap": "yarn && yarn lerna exec yarn && yarn lerna run build",
    "lerna:publish": "yarn lerna run build && yarn lerna publish",
    "prettier:check": "prettier --check --single-quote \"./**/*.{ts,tsx,js,vue}\"",
    "prettier:write": "prettier --write --single-quote \"./**/*.{ts,tsx,js,vue}\"",
    "generate-types": "cd packages/common && yarn generate",
    "e2e": "cd packages/e2e && yarn test"
  },
  "license": "MIT",
  "devDependencies": {
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "2.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier:write && git add ."
    }
  }
}
